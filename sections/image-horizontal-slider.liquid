{{ 'image-horizontal-slider.css' | asset_url | stylesheet_tag }}

<style>
  #image-horizontal-slider--{{ section.id }}{
    background: {{ section.settings.bg_color }}
    ;
  }
</style>

<div class="image_horizontal_slider" id="image-horizontal-slider--{{ section.id }}">
  <div class="image_horizontal_slider_wrapper">
    <div class="swiper image_horizontal_slider_main">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        {%- for block in section.blocks -%}
          <div class="swiper-slide image_slider_wrapper">
            <div class="image_slider_main">
              <div class="image_box">
                <div class="image">
                  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>

      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>

      <!-- If we need scrollbar -->
      <div class="swiper-scrollbar"></div>
    </div>
  </div>
</div>

<script type="module" src="{{ 'image-horizontal-slider.js' | asset_url }}"></script>

{% schema %}
  {
    "name": "Image Horizontal Slider",
    "tag": "section",
    "settings": [
      {
        "type": "color_background",
        "id": "bg_color",
        "label": "Background Color"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image Slider",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Horizontal Slider",
        "settings": {}
      }
    ]
  }
{% endschema %}