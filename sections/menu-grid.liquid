  {%- for block in section.blocks -%}

  {%- endfor -%}
</style>
<div class="menu-grid" id="menu-grid--{{ section.id }}">
  <div class="menu-grid_main">
    <div class="swiper menu-grid_slider">
      <!-- Additional required wrapper -->
      <div class="swiper-wrapper">
        <!-- Slides -->
        {%- for block in section.blocks -%}
          <div class="swiper-slide swiper-slide_main" {{ block.shopify_attributes }}>
            <div class="menu_slider_wrapper grid-bg--{{ block.id }}">
              <div class="menu-grid_box">
                <div class="menu-grid_box_item item_left">
                  {%- if block.settings.title != blank -%}
                    <div class="menu-grid_title desktop-position--{{ block.settings.title_text_position }}">
                      <span class="menu-grid_title_text desktop-{{ block.settings.title_text_alignment }} mobile-{{ block.settings.title_text_alignment_mob }}" data-splitting>
                        {{- block.settings.title -}}
                      </span>
                    </div>
                  {%- endif -%}
                  {%- if block.settings.sub_title != blank -%}
                    <div class="menu-grid_subtitle desktop-position--{{ block.settings.sub_title_text_position }}">
                      <span class="menu-grid_subtitle_text desktop-{{ block.settings.sub_title_text_alignment }} mobile-{{ block.settings.sub_title_text_alignment_mob }}" data-splitting >
                        {{- block.settings.sub_title -}}
                      </span>
                    </div>
                  {%- endif -%}
                </div>
                <div class="menu-grid_box_item item_right">
                  {%- if block.settings.btn_bg != blank and block.settings.btn_text_11 != blank and block.settings.btn_link != blank -%}
                    <div class="menu-grid_btn_box">
                      <a href="{{ block.settings.btn_link }}" class="menu-grid_btn_wrapper">
                        <div class="btn_text">{{ block.settings.btn_text_11 }}</div>
                        <img
                          src="{{ block.settings.btn_bg | img_url: 'master' }}"
                          alt="{{ block.settings.btn_bg.alt }}}"
                        >                        
                      </a>
                    </div>
                  {%- endif -%}
                </div>
              </div>
              {%- if block.settings.sticker_image != blank -%}
                <div class="menu-grid_sticker">
                  <div class="sticker_image">
                    <img
                      src="{{ block.settings.sticker_image | img_url: 'master' }}"
                      alt="{{ block.settings.sticker_image.alt }}"
                    >
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>

      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>

      <!-- If we need scrollbar -->
      <div class="swiper-scrollbar"></div>
    </div>
  </div>
</div>

<script type="module" src="{{ 'menu-grid.js' | asset_url }}"></script>


